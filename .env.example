# Game Insights Environment Variables
# Copy this file to .env.local for local development

# =============================================================================
# BASE URL (for meta tags and sitemap)
# =============================================================================
VITE_BASE_URL=https://game-insights.app

# =============================================================================
# AI/LLM API Keys (Optional - for enhanced analysis)
# =============================================================================
# OpenAI API key for LLM-powered column analysis
VITE_OPENAI_API_KEY=

# Anthropic API key (alternative to OpenAI)
VITE_ANTHROPIC_API_KEY=

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================
# Google Analytics 4 measurement ID
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================
# Enable demo mode by default
VITE_DEMO_MODE=false

# Enable experimental features
VITE_EXPERIMENTAL_FEATURES=false
